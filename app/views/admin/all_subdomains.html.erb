<div id="page-yield">
  <div id="search_box_bg">
<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <% unless @schools.blank? %>
      <tr class="tr-head">
        <td><%= t('sl_no') %></td>
        <td><%= t('school_name') %></td>
        <td><%= t('sub_domain') %></td>
        <td><%= t('description') %></td>

      </tr>
      <tr class="tr-blank"></tr>
      <% @schools.each_with_index do |student, i| %>
          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-1"><%= i+1 %></td>
            <td class="col-4"><%=  link_to student.name, :controller => 'schools', :action => 'edit', :id => student.id%></td>
            <td class="col-4"><%= student.sub_domain.name if student.sub_domain %></td>
            <td class="col-7"><%= student.description %></td>
          </tr>
      <% end %>
  <% else %>

      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-2"><%= t('no_students_found') %></td>
      </tr>
  <% end %>
</table>
      </div>
      </div>