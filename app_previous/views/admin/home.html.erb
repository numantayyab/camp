<div id="page-yield">

  <% form_for @school, :url => {:controller => 'admin', :action => 'abc'} do |f| %>

      <% f.object.sub_domain ||= SubDomain.new %>
      <% f.fields_for :sub_domain do |s| %>
          <%= s.label 'sub_domain_name' %>
          <%= s.text_field :name %>
      <% end %>
      <%= f.label 'school_name' %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit 'abc' %>
  <% end %>
</div>